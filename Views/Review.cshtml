@model IEnumerable<ContractMonthlyClaimSystem.Models.LecturerClaim>

<h2>Pending Claims for Review</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Total Amount</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="claims-table-body">
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.TotalAmount.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.UploadedFileName))
                    {
                        <a href="@Url.Action("Download", "LecturerClaims", new { id = claim.ClaimId })">
                            @claim.UploadedFileName
                        </a>
                    }
                </td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Include SignalR JavaScript library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
<script type="text/javascript">
    // Connect to SignalR hub
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/claimHub")
        .build();

    // Handle real-time updates
    connection.on("ReceiveStatusUpdate", function (message) {
        alert(message); // Display the notification
        // Refresh the page or update the table to reflect the new status
        location.reload();
    });

    connection.start().catch(function (err) {
        return console.error(err.toString());
    });
</script>
